<script>
  let navOpen = false;

  function toggleMenu() {
    navOpen = !navOpen;

    // 延迟查找元素，确保它已加载到 DOM
    setTimeout(() => {
      const navLinks = document.querySelector('.nav-links');
      navLinks?.classList.toggle('open', navOpen);
    }, 0);
  }
</script>


<div class="hamburger" onclick="toggleMenu()">
  <span class="line"></span>
  <span class="line"></span>
  <span class="line"></span>
</div>
