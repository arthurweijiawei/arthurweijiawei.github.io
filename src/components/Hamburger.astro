<script>
  let navOpen = false;

  function toggleMenu() {
    navOpen = !navOpen;
    const navLinks = document.querySelector('.nav-links');
    navLinks?.classList.toggle('open', navOpen);
  }
</script>

<div class="hamburger" onclick="toggleMenu()">
  <span class="line"></span>
  <span class="line"></span>
  <span class="line"></span>
</div>
